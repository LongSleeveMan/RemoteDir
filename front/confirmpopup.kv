<ConfirmPopup>
    orientation: 'vertical'
    border: (0,0,0,0)
    spacing: 4
    auto_dismiss: False
    separator_color: ''

    Label:
        background: app.active_bcolor
        size_hint_y: 1
        color: app.font_color
        text: root.text
        font_size: 14
        multiline: True
        canvas.before:
            Color:
                rgba: (0, 0, 0, 1)  if self.background is None else self.background
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        size_hint_y: None
        height: 20
        spacing: 2
        background: app.active_window_color
        canvas.before:
            Color:
                rgba: (0, 0, 0, 1)  if self.background is None else self.background #(4/255, 26/255, 47/255, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:

        Button:
            size_hint: None, None
            #font_size: 30
            size: 60, 20
            background_color: app.main_bcolor
            text: 'Yes'
            color: app.font_color
            on_release: root.dispatch('on_answer','yes')

        Button:
            size_hint: None, None
            #font_size: 30
            size: 60, 20
            background_color: app.main_bcolor
            text: 'No'
            color: app.font_color
            on_press: root.dispatch('on_answer', 'no')

        BoxLayout: